<!-- Views/Randevu/Index.cshtml -->
@{
    ViewData["Title"] = "Randevu Listeleme";
}

<h2>Randevu Listeleme</h2>

<form asp-action="Listele" method="post">
    <div class="form-group">
        <label for="tc">TC Kimlik Numarası:</label>
        <input type="text" class="form-control" id="tc" name="tc" required>
    </div>
    <button type="submit" class="btn btn-primary">Listele</button>
</form>

<p class="text-danger">@ViewBag.Message</p>
