@model IEnumerable<HastaneOtomasyonu.Models.Doktor>

@{
    ViewData["Title"] = "Index";
}

<div style="background-color:azure">

    <table class="table">
        <thead>
            <tr>
                <th style="color:black">
                    @Html.DisplayNameFor(model => model.doktoradi)
                </th>
                <th style="color:black">

                    @Html.DisplayNameFor(model => model.muayeneucreti)
                </th>
                <th style="color:black">

                    @Html.DisplayNameFor(model => model.poliklinik)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="color:lightseagreen">
                        @Html.DisplayFor(modelItem => item.doktoradi)
                    </td>
                    <td style="color:lightseagreen">

                        @Html.DisplayFor(modelItem => item.muayeneucreti)
                    </td>
                    <td style="color:lightseagreen">

                        @Html.DisplayFor(modelItem => item.poliklinik.adi)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>